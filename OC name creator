        function parseData(rawData) {
            return rawData.map(item => {
                const parts = item.split('|');
                return { kanji: parts[0], kana: parts[1], romaji: parts[2], tag: parts[3] };
            });
        }

        const db = {
            surnames: parseData(rawSurnames),
            male: parseData(rawNamesMale),
            female: parseData(rawNamesFemale)
        };

        function getRadioValue(name) {
            const radios = document.getElementsByName(name);
            for (let r of radios) { if (r.checked) return r.value; }
            return null;
        }

        function generate() {
            const gender = getRadioValue('gender');
            const style = getRadioValue('style');
            const surnameStyle = getRadioValue('surnameStyle');

            document.getElementById('step1').classList.remove('active');
            document.getElementById('step2').classList.add('active');

            let filteredSurnames = db.surnames.filter(s => s.tag === surnameStyle);
            if(filteredSurnames.length === 0) filteredSurnames = db.surnames;

            let targetNameList = (gender === 'male') ? db.male : db.female;
            let filteredNames = targetNameList;
            if (style !== 'all') filteredNames = targetNameList.filter(n => n.tag === style);
            if(filteredNames.length === 0) filteredNames = targetNameList;

            const surname = filteredSurnames[Math.floor(Math.random() * filteredSurnames.length)];
            const name = filteredNames[Math.floor(Math.random() * filteredNames.length)];

            document.getElementById('resKanji').innerText = surname.kanji + ' ' + name.kanji;
            document.getElementById('resKana').innerText = surname.kana + ' ' + name.kana;
            document.getElementById('resRomaji').innerText = surname.romaji + ' ' + name.romaji;
            
            const styleMap = {'cool':'å¸…æ°”', 'gentle':'æ²»æ„ˆ', 'nature':'æ¸…æ–°', 'noble':'è´µæ—', 'dark':'ä¸­äºŒ', 'all':'éšæœº'};
            const genderMap = {'male':'ç”·æ€§', 'female':'å¥³æ€§'};
            const sMap = {'common':'æ—¥å¸¸å§“', 'rare':'å¹»æƒ³å§“'};

            document.getElementById('resTags').innerHTML = `
                <span class="tag-pill gender">${genderMap[gender]}</span>
                <span class="tag-pill surname">${sMap[surnameStyle]}</span>
                <span class="tag-pill style">${styleMap[style] || 'éšæœº'}</span>
            `;
        }

        function reset() {
            document.getElementById('step2').classList.remove('active');
            document.getElementById('step1').classList.add('active');
        }
    </script>
